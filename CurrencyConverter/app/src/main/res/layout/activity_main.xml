<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginStart="44dp"
        android:background="#C2E4C3"
        android:gravity="center"
        android:text="Dollar To BDT"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:onClick="D2B"
        android:text="Convert"
        app:layout_constraintEnd_toEndOf="@+id/dolText"
        app:layout_constraintStart_toStartOf="@+id/dolText"
        app:layout_constraintTop_toBottomOf="@+id/dolText" />

    <EditText
        android:id="@+id/dolText"
        android:layout_width="395dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="$$"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/picview"
        android:layout_width="403dp"
        android:layout_height="197dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:srcCompat="@drawable/currency"
        tools:layout_editor_absoluteX="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>